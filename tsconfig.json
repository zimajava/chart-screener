{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "noImplicitReturns": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom"
    ],
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
