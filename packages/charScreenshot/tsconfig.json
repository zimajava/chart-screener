{
  "compilerOptions": {
    "target": "es2015",
    "module": "CommonJS",
    "outDir": "../../dist",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["es6", "es2015", "dom"],
//    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "downlevelIteration": true,


//    "strict": true,
    "strictNullChecks": false,
//    "inlineSources": true,
//    "declaration": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "importHelpers": true,
//    "module": "esnext",
//    "target": "es5",
    "rootDir": "src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
