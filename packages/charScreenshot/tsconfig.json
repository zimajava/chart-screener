{
  "compilerOptions": {
    "target": "es2015",
    "module": "CommonJS",
    "outDir": "../../dist",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "downlevelIteration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
